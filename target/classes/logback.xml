<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/game.log</file>
        <append>false</append> <!-- Ã¼berschreibt bei jedem Start -->
        <encoder>
            <pattern>%d [%level] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>



